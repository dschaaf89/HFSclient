@{
  Layout = "_Layout";
}
@using HFSclient.Models;




@if (@Model.Count == 0)
{
  <h3>No Standings are available!</h3>
}
else
{
   <table cellpadding="3" cellspacing="1" class="Standings" width="575"><tr class="masthead_alt"><td bgcolor="#FFFFFF" colspan="5">
    
    <span style="color:#FFFFFF">Name of League</span>
    </td></tr>
    <tr class="stathead">
    <td width="40%">TEAM</td>
    <td align="right" width="15%">Wins</td>
    <td align="right" width="15%">Losses</td>
    <td align="right" width="15%">PCT</td>
    <td align="right" width="15%">GB</td>
    <td align="right" width="15%">PointsFor</td>
    <td align="right" width="15%">PointsAgainst</td>
    @foreach (Standing test in Model)
    {
      <tr class="evenrow"><td>TeamName</td><td align="right">test.Wins</td><td align="right">test.Wins</td><td align="right">test.Wins / test.Loss</td><td align="right">0</td><td align="right">test.PtsFor</td><td align="right">test.PtsAgst</td></tr>

    }
  </table>
}
























