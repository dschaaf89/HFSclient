@{
  Layout = "_Layout";
}

@using HFSclient.ViewModels
@model LoginViewModel

<p>Log in with your account</p>
<hr />
@using (Html.BeginForm())
{
  @Html.Label("Email")
  @Html.TextBoxFor(m => m.Email)
  <br>
  @Html.Label("Password")
  @Html.PasswordFor(m => m.Password)

  <input type="submit" value="Log in" class="btn btn-info" />
}