@using Microsoft.AspNetCore.Identity;
@using HFSclient.Models

@inject SignInManager<ApplicationUser> signInManager
@inject UserManager<ApplicationUser> userManager

<div id="header">
  <img id="header-image" src="img/HFSlogo.jpg" alt="HFS Logo">
  <div id="header-plack">
    @if (User.Identity.IsAuthenticated)
    {
      <div class="userinfo">
        @User.Identity.Name
        @Html.ActionLink(" Log Off", "LogOut", "Account", null, new { @class = "btn btn-info"})
      </div>
    }
    else
    {
      <div class="userinfo">
        @Html.ActionLink(" Log in", "Login", "Account", null, new { @class = "btn btn-info" })
        @Html.ActionLink(" Register", "Register", "Account", null, new { @class = "btn btn-info" })
      </div>
    }
  </div>
</div>