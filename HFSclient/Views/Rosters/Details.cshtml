@{
  Layout = "_Layout";
}

@using HFSclient.Models

@ViewBag.Player.FirstName @ViewBag.Player.LastName

<div class="box">
  <div class="inner-box">
    <table>
      @if (@Model.Count != 0)
        <tr>
          <th>Season</th>
          <th>Week</th>
          <th>Team</th>
          <th>PassYards</th>
          <th>RecYards</th>
          <th>RushYards</th>
          <th>Interceptions</th>
          <th>Fumbles</th>
          <th>Receptions</th>
          <th>PassTDs</th>
          <th>RushTDs</th>
          <th>RecTDs</th>
        </tr>
        @foreach (var row in Model)
        {
          <tr>
            <th>row.Season</th>
            <th>row.Week</th>
            <th>row.Team</th>
            <th>row.PassYards</th>
            <th>row.RecYards</th>
            <th>row.RushYards</th>
            <th>row.Interceptions</th>
            <th>row.Fumbles</th>
            <th>row.Receptions</th>
            <th>row.PassTDs</th>
            <th>row.RushTDs</th>
            <th>row.RecTDs</th>
          </tr>
        }
        else
        {
          <tr>
            <td>There are no details for @ViewBag.Player.FirstName @ViewBag.Player.LastName.</td>
          </tr>
        }
    </table>
  </div>
</div>