@{
  Layout = "_Layout";
}
@using HFSclient.Models;
<br>
@using (Html.BeginForm())
{
  @Html.Label("Search for a League")
  @Html.TextBox("Name")
  <input type="submit" value="Search" class="btn btn-info btn-sm"/> //value is the button text
}
<h3>Current Leagues</h3>
<p>Hello @User.Identity.Name </p>
@if (@Model.Count == 0)
{
  <p>There are no Leauges in this list.</p>
}
@foreach (League league in Model)
{
  <li>@Html.ActionLink($"{league.LeagueName}", "Details", new { id = league.LeagueId })</li>
}
<br>

<p>@Html.ActionLink("Add New League", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>
<p>@Html.ActionLink("See All Leagues", "Index", null, null, new {@class="btn btn-info btn-sm"})</p>

