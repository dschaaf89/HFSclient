@{
  Layout = "_Layout";
}

@using HFSclient.Models;

@using (Html.BeginForm())
{
  <table>
    <tr>
      <td>Search for a League</td>
      <td>@Html.TextBox("Name")</td>
      <td><input type="submit" value="Search" class="btn btn-info btn-sm"/></td>//value is the button text
    </tr>
  </table>
}
<hr />
<p>Current Leagues</p>
<hr />
<div class="box">
  <div class="inner-box">
    <table>
      @if (@Model.Count == 0)
      {
        <tr>
          <td>There are no Leauges in this list.</td>
        </tr>
      }
      @foreach (League league in Model)
      {
        <tr>
          <td>@league.LeagueName</td>
          <td>@Html.ActionLink("View", "Details", new { id = league.LeagueId }, new {@class="btn btn-info btn-sm"} )</td>
        </tr>
      }
    </table>
  </div>
</div>

<p>@Html.ActionLink("Add New League", "Create", null, null, new {@class="btn btn-success btn-sm"})</p>
<p>@Html.ActionLink("See All Leagues", "Index", null, null, new {@class="btn btn-info btn-sm"})</p>

